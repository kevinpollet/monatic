{
  "name": "@kevinpollet/option.ts",
  "description": "Option monad for TypeScript",
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "homepage": "https://github.com/kevinpollet/option.ts#readme",
  "repository": "github:kevinpollet/option.ts",
  "bugs": "https://github.com/kevinpollet/option.ts/issues",
  "keywords": [
    "typescript",
    "monad",
    "option"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf lib && tsc -p tsconfig.build.json",
    "format": "prettier --write --ignore-path .gitignore '**/*.{ts,json,md,yml}'",
    "format:check": "prettier --check --ignore-path .gitignore '**/*.{ts,json,md,yml}'",
    "lint": "eslint --ignore-path .gitignore '**/*.ts'",
    "preversion": "run-p lint build test",
    "release": "np",
    "test": "jest test"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "^0.1.0",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^3.0.5",
    "jest": "^25.1.0",
    "lint-staged": "^9.2.5",
    "np": "^5.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "~3.8.3"
  },
  "np": {
    "yarn": false,
    "publish": false
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "overrides": [
      {
        "files": "**/*.test.ts",
        "env": {
          "jest": true
        }
      }
    ]
  }
}
