{
  "name": "optional.ts",
  "version": "0.0.0",
  "description": "Option monad for TypeScript",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/kevinpollet/optional.ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinpollet/optional.ts.git"
  },
  "bugs": {
    "url": "https://github.com/kevinpollet/optional.ts/issues"
  },
  "keywords": [
    "typescript",
    "monad",
    "option",
    "typed"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf coverage lib",
    "format": "prettier --write '{src,test}/**/*.{ts,json}' '*.{json,md,yaml}'",
    "lint:src": "eslint 'src/**/*.ts'",
    "lint:test": "eslint 'test/**/*.ts'",
    "prebuild": "run-s clean lint:src",
    "prepack": "run-s build",
    "pretest": "run-s build lint:test",
    "preversion": "run-s test",
    "test": "jest --coverage --collectCoverageFrom='src/**/*.ts' test"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.11",
    "@typescript-eslint/eslint-plugin": "1.6.1-alpha.14",
    "@typescript-eslint/parser": "1.6.1-alpha.14",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "typescript": "3.4.3"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-member-accessibility": [
        2,
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        0,
        {
          "allowExpressions": true
        }
      ]
    },
    "overrides": [
      {
        "files": "**/*.test.ts",
        "env": {
          "jest": true
        }
      }
    ]
  }
}
