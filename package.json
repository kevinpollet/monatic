{
  "name": "@kevinpollet/option.ts",
  "version": "1.0.0-beta.0",
  "description": "Option monad for TypeScript",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/optional.ts#readme",
  "repository": "github:kevinpollet/option.ts",
  "bugs": "https://github.com/kevinpollet/optional.ts/issues",
  "keywords": [
    "typescript",
    "monad",
    "option"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf coverage lib",
    "format": "prettier --write '**/*.{ts,json,md,yml}' '!{lib,coverage}/**/*'",
    "lint:src": "eslint 'src/**/*.ts'",
    "lint:test": "eslint 'test/**/*.ts'",
    "prebuild": "run-p clean lint:src",
    "pretest": "run-s lint:test",
    "preversion": "run-p build test",
    "release": "np",
    "test": "jest --coverage --collectCoverageFrom='src/**/*.ts' test"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.15",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "9.2.0",
    "np": "5.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "typescript": "3.5.3"
  },
  "np": {
    "yarn": false,
    "publish": false
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "no-dupe-class-members": 0,
      "@typescript-eslint/explicit-member-accessibility": [
        2,
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        2,
        {
          "allowExpressions": true
        }
      ]
    },
    "overrides": [
      {
        "files": "**/*.test.ts",
        "env": {
          "jest": true
        }
      }
    ]
  }
}
